@model IEnumerable<Student>

@{
    ViewData["Title"] = "List of Actors";
}

<!DOCTYPE html>
<html>
    <head>
        <title>List of Actors</title>
    </head>
    <body>
        <div class="text-white">
            <a asp-controller="Students" asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Add New
            </a>
        </div>
            <div class="row">
                <div class="col-md-10 offset-md-1">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Prodi</th>
                                <th>Address</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        @foreach(var item in Model)
                        {
                            <tr>
                            <td class="align-middle">@item.Id</td>
                            <td class="align-middle">@item.Name</td>
                            <td class="align-middle">@item.Prodi</td>
                            <td class="align-middle">@item.Address</td>
                            <td class="align-middle">
                                <a class="btn btn-outline-primary" asp-controller="Students" asp-action="Edit" asp-route-id="@item.Id">
                                    <i class="bi bi-pencil-square"></i>
                                    Edit
                                </a>
                                <a class="btn btn-outline-info" asp-controller="Students" asp-action="Details" asp-route-id="@item.Id">
                                    <i class="bi bi-eye"></i>
                                    Details
                                </a>
                                <a class="btn btn-danger text-white" asp-controller="Students" asp-action="Delete" asp-route-id="@item.Id">
                                    <i class="bi bi-trash"></i>
                                    Delete
                                </a>
                            </td>
                        </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
    </body>
</html>
